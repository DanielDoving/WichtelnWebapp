@page "/wishlist"
@using WichtelnWebapp.Shared
@inject HttpClient http
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@inject NavigationManager NavigationManager


<h3>My Wishlist</h3>
@if (wishlist == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Description </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (wishlist.Count != 0)
            {

                @foreach (var wish in wishlist)
                {
                    if (wish.GRANTED == false)
                    {
                        <tr>
                            <td>@wish.ITEM_TITLE</td>
                            <td>@wish.ITEM_DESCRIPTION</td>
                            <td>
                                <button type="button" class="btn btn-danger" @onclick="@(()=> deleteWish(wish.WISH_ID))">
                                    <span class="oi oi-trash"></span>
                                </button>
                                <button type="button" class="btn btn-primary" @onclick="@(()=> editWish(wish.WISH_ID))">
                                    <span class="oi oi-pencil"></span>
                                </button>
                            </td>
                        </tr>
                    }
                }
            }
            else
            {
                <p>No Wishes added yet</p>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-primary btn-lg" @onclick="@addwish">
        <span class="oi oi-plus"></span>
    </button>
    <br />
    <br />
    <h4>Granted Wishes</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Description </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wish in wishlist)
            {
                if (wish.GRANTED == true)
                {
                    <tr>
                        <td>@wish.ITEM_TITLE</td>
                        <td>@wish.ITEM_DESCRIPTION</td>
                    </tr>
                }
            }
        </tbody>
    </table>


}


@code {
    [Parameter]
    public int id { get; set; }

    private List<WishModel> wishlist;


    protected override async Task OnInitializedAsync()
    {
        id = await sessionStorage.GetItemAsync<Int32>("ACCOUNT_ID");
        wishlist = await http.GetFromJsonAsync<List<WishModel>>("api/WishList/GetAllByID/" + id);
    }

    async Task deleteWish(int wish_id)
    {
        await http.DeleteAsync("api/WishList/Delete/" + wish_id);
        wishlist = await http.GetFromJsonAsync<List<WishModel>>("api/WishList/GetAllByID/" + id);
    }

    void editWish(int id)
    {
        NavigationManager.NavigateTo("/editwish?id=" + id);
    }

    void addwish()
    {
        NavigationManager.NavigateTo("/addwish");
    }


}
